# Editorconfig configuration
# --------------------------
# Defines files format so that editing across different IDE
# does not mess with the indentation and special characters
# See http://editorconfig.org/ for more info

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.java]
charset = utf-8

# 4 space indentation
indent_style = space
indent_size = 4
